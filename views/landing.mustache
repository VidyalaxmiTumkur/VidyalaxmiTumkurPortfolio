<!doctype html>
<html lang="en">
<head>
    <title>The Gallery</title>
    <meta name="description" content="" />

    {{>head}}
</head>

<body>
    <div class="blocks-page">
        {{>header2}}
            
            <section style="background:url('{{{page.hero.img_background}}}=s2048');background-size:cover;background-position:center;">
                <div class="gradient-div py-3" style="height:76vh">
            
                    <div class="container">
                        <div class="row justify-content-center header-row">
                            <div class="col-12 col-md-8 col-lg-7 text-center text-white">
                                <img class="mt-2" style="width:250px;border-radius:50%" src="{{{page.hero.img_profile}}}=s300-c" alt="MyProfilePicture">
                                <h1 class="display-3 mt-1">{{page.hero.greeting}}</h1>
                                <p class="lead text-white mb-4 mt-0">
                                    {{page.hero.introduction}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section id="projects" class="py-5 py-md-7">
                    <div class="container py-md-5">
                        <div class="row block-header">
                            <div class="col-sm-8 mx-auto text-center">
                                <h1 class="display-4 mt-2">{{page.projects.header}}</h1>
                                <hr>
                                <p class="lead">{{page.projects.subheader}}</p>
                            </div>
                        </div>
                
                        <div class="row mt-5 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000">
                            {{#projects}}
                            <div class="col-md-4 col-sm-12 mb-2r">
                                <a href="/project/{{slug}}">
                                    <div class="position-relative project">
                                        <div class="image position-relative ">
                                            <img src="{{{image}}}=s650-c" class="img-fluid w-100 d-block">
                                            <div class="overlay-box">
                                                <div class="overlay-inner overlay-content">
                                                    <h5 class="mb-0">{{name}}</h5>
                                                    <p>{{category}}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            {{/projects}}
                        </div>
                    </div>
                </section>

                <section id="services" class="py-md-5 block">
                        <div class="container">
                            <div class="row block-header">
                                <div class="col-sm-8 mx-auto text-center">
                                    <h1 class="display-4 mt-2">Services</h1>
                                    <hr>
                                    <p class="lead">Following are the services which I can offer</p>
                                </div>
                            </div>
                            <div class="row mt-5">
                                <div class="col-md-4 service mb-5 aos-init aos-animate">
                                    <img class="icon mr-4" src="{{{page.service.img_1}}}">
                                    <div class="content">
                                        <h5>Front End Development</h5>
                                        <p>Angular JS, Bootstrap, HTML, CSS, Javascript</p>
                                    </div>
                                </div>
                                <div class="col-md-4 service mb-5 aos-init aos-animate">
                                    <img class="icon mr-4" src="{{{page.service.img_3}}}">
                                    <div class="content">
                                        <h5>Back End Development</h5>
                                        <p>Java, MEAN Stack, Android</p>
                                    </div>
                                </div>
                                <div class="col-md-4 service mb-5 aos-init aos-animate">
                                    <img class="icon mr-4" src="{{{page.service.img_4}}}">
                                    <div class="content">
                                        <h5>Database</h5>
                                        <p>MySQL, MongoDB</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                <section id="contact" class="py-md-5 block text-center contact-block mb-5">
                    <div class="container">
                        <div class="row block-header">
                            <div class="col-sm-8 mx-auto text-center">
                                <h1 class="display-4 mt-2 section-title">{{page.contact.header}}</h1>
                                <hr>
                                <p class="lead">{{page.contact.subheader}}</p>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <form class="col-md-4 col-xl-4 mx-auto input-border">
                                <div class="form-group">
                                    <input type="text" id="contact-form-name" class="form-control form-control-lg" placeholder="Name">
                                </div>
                                <div class="form-group">
                                    <input type="text" id="contact-form-emailAddress" class="form-control form-control-lg" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input type="text" id="contact-form-message" class="form-control form-control-lg" placeholder="Message">
                                </div>
                                <button id='btn-contact-submit' class="btn btn-block btn-lg btn-info">Send Message</button>
                            </form>
                        </div>
                    </div>
                </section>

        {{>footer}}
    </div>

    {{>scripts}}
    <script>
        (function(){
            console.log('HELLO!')
            $('#btn-contact-submit').click(function(event){
                if(event)
                    event.preventDefault()

                var visitor = {
                    name: $('#contact-form-name').val(),
                    email: $('#contact-form-emailAddress').val(),
                    message: $('#contact-form-message').val()
                }

                console.log('CONTACT FORM SUBMITTED: ' + JSON.stringify(visitor))
            })
        })()
    </script>
</body>
</html>
